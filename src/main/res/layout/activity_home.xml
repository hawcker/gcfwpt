<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true" >

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_menu_linearlayout">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_menu_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/main_rd_background"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/menu_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="56.0dip" >

            <ImageView
                android:id="@+id/menu_imageview_1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginBottom="3.0dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/main_first" />

            <TextView
                android:id="@+id/menu_textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dip"
                android:singleLine="true"
                android:text="首页"
                android:textColor="#ffffff"
                android:textSize="11.0sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="56.0dip" >

            <ImageView
                android:id="@+id/menu_imageview_2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginBottom="3.0dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/main_task" />

            <TextView
                android:id="@+id/menu_textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dip"
                android:singleLine="true"
                android:text="任务大厅"
                android:textColor="#ffffff"
                android:textSize="11.0sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_layout_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="56.0dip" >

            <ImageView
                android:id="@+id/menu_imageview_3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginBottom="3.0dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/main_designer" />

            <TextView
                android:id="@+id/menu_textview_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dip"
                android:singleLine="true"
                android:text="设计师库"
                android:textColor="#ffffff"
                android:textSize="11.0sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu_layout_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minWidth="56.0dip" >

            <ImageView
                android:id="@+id/menu_imageview_4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginBottom="3.0dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/main_me" />

            <TextView
                android:id="@+id/menu_textview_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dip"
                android:singleLine="true"
                android:text="我"
                android:textColor="#ffffff"
                android:textSize="11.0sp" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>